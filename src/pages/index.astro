---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="flex h-screen w-screen flex-col items-center justify-center">
    <Header title={SITE_TITLE} />
    <div class="h-16 w-full"></div>
    <main class="flex-grow p-8 lg:max-w-6xl">
      <div class="mb-4 text-6xl font-black">
        I'm Leo Wang, a Web / Game Developer & Designer.
      </div>
      <div class="text-4xl font-black">Currently living in Shanghai</div>
      <div class="text-4xl font-black">
        Studying @<a
          class="transition ease-in-out hover:text-purple-600"
          href="https://shanghai.nyu.edu"
        >
          NYUShanghai</a
        >
      </div>
      <div class="text-4xl font-black">
        Speaks Chinese, English & <a
          class="transition ease-in-out hover:hover:text-blue-600"
          href="https://typescriptlang.org"
        >
          TypeScript
        </a>
      </div>
      <div class="text-4xl font-black">
        Also on <a
          href="https://github.com/ImPrankster"
          class="transition ease-in-out hover:text-orange-600">GitHub</a
        >/<a
          href="https://twitter.com/meimprankster"
          class="transition ease-in-out hover:text-blue-600">Twitter</a
        >
      </div>
    </main>
    <Footer />
  </body>
</html>
