---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header title={SITE_TITLE} />
    <main class="flex flex-col p-16">
      <div class="h-16"></div>
      <div class="pb-4 text-6xl font-black">
        I'm Leo Wang, a Web / Game Developer & Designer.
      </div>
      <div class="text-4xl font-black">Currently living in Shanghai</div>
      <div class="text-4xl font-black">
        Studying @<a
          class="transition ease-in-out hover:text-primary"
          href="https://shanghai.nyu.edu"
        >
          NYUShanghai</a
        >
      </div>
      <div class="text-4xl font-black">
        Speaks Chinese, English & <a
          class="transition ease-in-out hover:text-primary"
          href="https://typescriptlang.org"
        >
          TypeScript
        </a>
      </div>
    </main>
    <Footer />
  </body>
</html>
